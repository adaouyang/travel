<div id="map"></div>
    <script>
      function initMap() {
        var location = {lat: <%= @idea.latitude %>, lng: <%= @idea.longitude %>};
        var map = new google.maps.Map(document.getElementById('map'), {
          zoom: 6,
          center: location
        });
        var marker = new google.maps.Marker({
          position: location,
          map: map
        });
      }
    </script>
    <script async defer
    src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDcLKKiUraunBjpCs5Af4NSNjukNRABDx8&callback=initMap">
    </script>
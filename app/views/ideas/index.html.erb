<h1>Manage Ideas</h1>

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Destination</th>
      <th>Start</th>
      <th>End</th>
      <th>Tag</th>
      <th>User</th>
      <th>Comments</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ideas.each do |idea| %>
      <tr>
        <td><%= idea.title %></td>
        <td><%= idea.destination %></td>
        <td><%= idea.start %></td>
        <td><%= idea.end %></td>
        <td><%= idea.tag %></td>
        <td><%= idea.user.first_name %></td>
        <td><%= idea.comments.count %></td>
        <td><%= link_to 'Show', idea %></td>
          <% if idea.user == current_user %>
            <td><%= link_to 'Edit', edit_idea_path(idea) %></td>
            <td><%= link_to 'Destroy', idea, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Idea', new_idea_path %>